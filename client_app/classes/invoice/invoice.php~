<?
	
	class invoice extends dataObject
	{
		
		function __construct ($intInvoice)
		{
			parent::__construct ("Invoice");
			
			DatabaseAccess::$bolObLib = true;
			
			// Check their session is valid ...
			$selAccounts = new StatementSelect ("Invoice", "*", "Id = <Id>");
			$selAccounts->Execute(Array("Id" => $intInvoice));
			
			if ($selAccounts->Count () <> 1)
			{
				throw new Exception ("Class Invoice could not be instantiated because it could not be found in the database");
			}
			
			$rowContact = $selAccounts->Fetch ("Invoice");
			
			$i=0;
			foreach ($rowContact as $fldInformation)
			{
				$field [$i] = $fldInformation;
				$this->Push ($field [$i]);
				++$i;
			}
			
			DatabaseAccess::$bolObLib = false;
		}
	}
	
?>
